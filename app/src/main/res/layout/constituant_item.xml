<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="#E90909"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/border_back"
        android:orientation="vertical">
        <TextView
            android:id="@+id/constituant_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre ici"
            android:textColor="#000"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/constituant_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grade"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/constituant_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_margin="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/constituant_prop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Properties"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:textColor="#fff"
                android:background="@drawable/border_back_button"
                android:padding="10dp" />

            <Button
                android:id="@+id/constituant_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:text="View Reference"
                android:textColor="#fff"
                android:background="@drawable/border_back_button"
                android:padding="10dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>